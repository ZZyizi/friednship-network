{
  "name": "friendship-network",
  "productName": "friendship-network",
  "description": "A desktop application for LAN media sharing built with Electron, Vue 3, and TypeScript",
  "version": "0.0.2",
  "private": true,
  "type": "module",
  "author": {
    "name": "YiZi",
    "email": "yizi@example.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/ZZyizi/friendship-network#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZZyizi/friendship-network.git"
  },
  "bugs": {
    "url": "https://github.com/ZZyizi/friendship-network/issues"
  },
  "keywords": [
    "electron",
    "vue3",
    "media-sharing",
    "lan",
    "desktop-app",
    "typescript"
  ],
  "scripts": {
    "dev": "chcp 65001 & vite ",
    "build": "vite build",
    "build:prod": "cross-env NODE_ENV=production vite build",
    "preview": "vite preview",
    "start": "chcp 65001 && electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "pack": "electron-builder --dir",
    "packW": "electron-builder --win",
    "packM": "electron-builder --mac",
    "packL": "electron-builder --linux",
    "dist": "npm run build:prod && electron-builder",
    "dist:win": "npm run build:prod && electron-builder --win",
    "dist:mac": "npm run build:prod && electron-builder --mac",
    "dist:linux": "npm run build:prod && electron-builder --linux",
    "test": "node tests/run-tests.js",
    "test:unit": "node tests/run-tests.js --type unit",
    "test:integration": "node tests/run-tests.js --type integration",
    "test:edge": "node tests/run-tests.js --type edge",
    "test:coverage": "node tests/run-tests.js --coverage",
    "test:watch": "node tests/run-tests.js --watch",
    "test:ci": "node tests/run-tests.js --coverage --bail --reporter json",
    "test:ui": "npx vitest --ui",
    "clean": "rimraf dist dist-electron friendship-network",
    "clean:cache": "rimraf node_modules/.vite node_modules/.cache",
    "clean:all": "npm run clean && npm run clean:cache && rimraf node_modules",
    "electron:install": "cross-env ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ node node_modules/electron/install.js",
    "postinstall": "npm run electron:install && electron-builder install-app-deps",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "build": {
    "appId": "com.yizi.friendship",
    "productName": "friendship-network",
    "files": [
      "dist/**/*"
    ],
    "extraFiles": [
      {
        "from": "dist/ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/favicon.ico",
      "publisherName": "yizi"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/favicon.ico",
      "uninstallerIcon": "build/favicon.ico",
      "shortcutName": "friendship-network"
    },
    "asar": true,
    "directories": {
      "output": "friendship-network",
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.7.9",
    "better-sqlite3": "^12.5.0",
    "element-plus": "^2.9.3",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "iconv-lite": "^0.6.3",
    "local-devices": "^4.0.0",
    "md5": "^2.3.0",
    "music-metadata": "^7.0.0",
    "node-ssdp": "^4.0.1",
    "pinia": "^3.0.1",
    "uuid": "^11.0.5",
    "vue": "^3.4.21",
    "vue-router": "^4.5.0",
    "xmlbuilder": "^15.1.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/md5": "^2.3.5",
    "@types/node-ssdp": "^4.0.4",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "builtin-modules": "^5.0.0",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "esbuild": "latest",
    "nodemon": "^3.1.7",
    "sass-embedded": "^1.83.4",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-vue-components": "^28.0.0",
    "vite": "6.0.9",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-require": "^1.2.14",
    "vite-plugin-static-copy": "^2.2.0",
    "vitest": "^3.2.4"
  },
  "main": "dist/main.js"
}
