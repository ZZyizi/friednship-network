{
  "name": "friendship-network",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "chcp 65001 & vite ",
    "check": "electron --trace-deprecation dist-electron/main.js",
    "build": "vite build",
    "preview": "vite preview",
    "start": "chcp 65001 && electron .",
    "pack": "electron-builder --dir",
    "packW": "electron-builder --win",
    "packM": "electron-builder --mac"
  },
  "build": {
    "appId": "com.yizi.friendship",
    "productName": "friendship-network",
    "files": [
      "dist/**/*"
    ],
    "extraFiles": [
      {
        "from": "dist/ffmpeg.exe",
        "to": "ffmpeg.exe"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/favicon.ico",
      "publisherName": "yizi"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/favicon.ico",
      "uninstallerIcon": "build/favicon.ico",
      "shortcutName": "friendship-network"
    },
    "asar": true,
    "directories": {
      "output": "friendship-network",
      "buildResources": "assets"
    }
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@types/better-sqlite3": "^7.6.12",
    "@types/fluent-ffmpeg": "^2.1.27",
    "axios": "^1.7.9",
    "element-plus": "^2.9.3",
    "esbuild": "latest",
    "express": "^4.21.2",
    "fluent-ffmpeg": "^2.1.3",
    "iconv-lite": "^0.6.3",
    "local-devices": "^4.0.0",
    "music-metadata": "^7.0.0",
    "pinia": "^3.0.1",
    "uuid": "^11.0.5",
    "vue": "^3.4.21",
    "vue-router": "^4.5.0",
    "ffmpeg-static": "file:libs/ffmpeg-static"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "esbuild": "latest",
    "nodemon": "^3.1.7",
    "sass-embedded": "^1.83.4",
    "typescript": "^5.7.2",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-vue-components": "^28.0.0",
    "vite": "6.0.9",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-require": "^1.2.14",
    "vite-plugin-static-copy": "^2.2.0"
  },
  "main": "dist/main.js"
}
